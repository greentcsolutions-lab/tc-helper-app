// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String    @id @default(cuid())
  clerkId              String    @unique
  email                String?
  state                String?
  onboarded            Boolean   @default(false)
  quota                Int       @default(5)
  credits              Int       @default(1)
  stripeCustomerId     String?
  stripeSubscriptionId String?
  priceId              String?
  currentPeriodEnd     DateTime?

  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  usage                UserUsage?
  parses               Parse[]

  @@map("users")
}

model UserUsage {
  id         String   @id @default(cuid())
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  parses     Int      @default(0)
  lastParse  DateTime?

  @@map("user_usage")
}

model Parse {
  id                   String    @id @default(cuid())
  userId               String
  user                 User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Basic metadata
  fileName             String
  state                String    @default("Unknown")        // California, Texas, etc.
  
  // Extraction results
  rawJson              Json      @default({})              // Raw Grok response
  formatted            Json      @default({})              // Cleaned/formatted data
  missingSCOs          Boolean   @default(false)           // Legacy field
  counterInfo          Json?                               // Counter/addendum info

  // Status tracking (updated throughout pipeline)
  // PROCESSING → RENDERED → READY_FOR_EXTRACT → COMPLETED/NEEDS_REVIEW
  // Error states: RENDER_FAILED, EXTRACTION_FAILED
  status               String    @default("PROCESSING")

  // Temporary storage (deleted after extraction completes)
  pdfBuffer            Bytes?                              // Original uploaded PDF, cleared after extraction
  renderZipUrl         String?                             // Preview ZIP URL (9 pages @ 290 DPI), cleared after extraction
  renderZipKey         String?                             // Blob storage key for cleanup

  // Classification results (saved after preview/classification pass)
  criticalPageNumbers  Int[]     @default([])              // e.g., [3, 8, 15, 42] - pages containing final terms
  pageCount            Int?                                // Total pages in document
  
  // Error tracking
  errorMessage         String?                             // Populated on RENDER_FAILED or EXTRACTION_FAILED

  // Timestamps
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  finalizedAt          DateTime?                           // When extraction completed

  @@index([userId, createdAt])
  @@map("parses")
}