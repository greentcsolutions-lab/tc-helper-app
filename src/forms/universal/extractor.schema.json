{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/universal/extractor.schema.json",
  "title": "Universal U.S. Real Estate Transaction Extraction (Pure Data Extraction)",
  "description": "Version 6.0.0 - 2025-12-31 - LEAN: Removed classification fields (already known from classifier), pure extraction only",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "properties": {
      "buyerNames": {
        "type": ["array", "null"],
        "items": { "type": "string", "minLength": 1 },
        "minItems": 1,
        "maxItems": 6,
        "example": ["John Smith", "Jane Doe"]
      },
      "sellerNames": {
        "type": ["array", "null"],
        "items": { "type": "string" },
        "minItems": 1,
        "maxItems": 6,
        "example": ["Robert Johnson"]
      },
      "propertyAddress": {
        "type": ["string", "null"],
        "minLength": 10,
        "example": "123 Main Street, Los Angeles, CA 90210"
      },
      "purchasePrice": {
        "type": ["number", "null"],
        "minimum": 0,
        "example": 750000
      },
      "earnestMoneyDeposit": {
        "type": ["object", "null"],
        "properties": {
          "amount": { "type": ["number", "null"], "example": 15000 },
          "holder": { "type": ["string", "null"], "example": "First American Title" }
        }
      },
      "closingDate": {
        "type": ["string", "number", "null"],
        "example": "2024-03-15"
      },
      "financing": {
        "type": ["object", "null"],
        "properties": {
          "isAllCash": { "type": ["boolean", "null"], "example": false },
          "loanType": { "type": ["string", "null"], "example": "Conventional" },
          "loanAmount": { "type": ["number", "null"], "example": 600000 }
        }
      },
      "contingencies": {
        "type": ["object", "null"],
        "properties": {
          "inspectionDays": { "type": ["number", "string", "null"], "example": 17 },
          "appraisalDays": { "type": ["number", "string", "null"], "example": 17 },
          "loanDays": { "type": ["number", "string", "null"], "example": 21 },
          "saleOfBuyerProperty": { "type": ["boolean", "null"], "example": false }
        }
      },
      "closingCosts": {
        "type": ["object", "null"],
        "properties": {
          "buyerPays": { 
            "type": ["array", "null"],
            "items": { "type": "string" },
            "example": ["Escrow fees", "Title insurance"]
          },
          "sellerPays": { 
            "type": ["array", "null"],
            "items": { "type": "string" },
            "example": ["Transfer tax", "HOA documents"]
          },
          "sellerCreditAmount": { "type": ["number", "null"], "example": 5000 }
        }
      },
      "brokers": {
        "type": ["object", "null"],
        "properties": {
          "listingBrokerage": { "type": ["string", "null"], "example": "Keller Williams" },
          "listingAgent": { "type": ["string", "null"], "example": "Sarah Johnson" },
          "sellingBrokerage": { "type": ["string", "null"], "example": "Compass Real Estate" },
          "sellingAgent": { "type": ["string", "null"], "example": "Michael Chen" }
        }
      },
      "personalPropertyIncluded": {
        "type": ["array", "null"],
        "items": { "type": "string" },
        "example": ["Refrigerator", "Washer/Dryer", "Window coverings"]
      },
      "buyerSignatureDates": {
        "type": ["array", "null"],
        "items": { "type": "string" },
        "example": ["1/15/24", "1/15/24"]
      },
      "sellerSignatureDates": {
        "type": ["array", "null"],
        "items": { "type": "string" },
        "example": ["1/10/24"]
      },
      "escrowHolder": {
        "type": ["string", "null"],
        "example": "First American Title Company"
      },
      "confidence": {
        "type": "object",
        "properties": {
          "overall": { "type": "integer", "minimum": 0, "maximum": 100 },
          "fieldScores": {
            "type": "object",
            "additionalProperties": { "type": "integer", "minimum": 0, "maximum": 100 }
          }
        },
        "required": ["overall"]
      }
    },
    "required": ["confidence"]
  }
}